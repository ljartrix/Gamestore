@{
        ViewBag.Title = "Index";
    }

    @model IEnumerable<GameStore2.Models.Producto>
<style>
    .search{
        width: 500px;
        /*height: 2.5em;*/
        font-size: 1.3em;
        font-family: oswald;
          }
</style>
    <h2>Video Juegos</h2>

    <div class="col-md-offset-5">
        @using (Html.BeginForm())
        {
            <p>
                <h3 style="display:inline;">Buscar Video Juego</h3>
                @Html.TextBox("searchString",null, new { @class = "search"})

                <button class="btn btn-lg btn-primary" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </p><br/><br />

        }
    </div>
        @if (Model != null)
        {
            foreach(var item in Model)
            {
            <div class="col-md-3">
                <div class="juego" style="position:relative; margin-bottom: 0px;">
                    @if (item.Path != null)
                    {
                    <img class="cover" src="@Url.Content(item.Path)" alt="Portada" style="width:196px;" />
                    }
                    else if (item.Path == null)
                    {
                        <img class="cover" src="~/Images/Nodisponible.jpg" alt="Portada" style="width: 196px; " />
                    }
                    <div class="info" style="height: 50px; text-align:center; position:absolute; bottom:0px;">
                        <b >@item.Nombre</b>
                        <table>
                            <tr>
                            <td class="consola"><b>@item.Consola </b></td>
                            <td class="precio"><b>@item.Precio</b>$</td>
                            </tr>
                        </table>
                    </div>
                </div>
                    <a style="width:200px; margin-top:1em; margin-bottom:3em; padding: 0.3em 0;"  class="btn btn-success" href="@Url.Action("AgregarCarrito","Carrito",new { Id = @item.Id }, null )"><i class="glyphicon glyphicon-shopping-cart"></i></a>
            </div>
            }
            
        <div class="row" style="clear:both;">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        }

