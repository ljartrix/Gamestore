@model GameStore2.Models.Producto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Consola)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consola)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria.Genero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Genero)
        </dd>
    </dl>

  

    <div class="col-lg-offset-1">
        <b style="font-size: 1.2em; display: block;">Portada</b>
        @if (Model.Path != null)
        {
            <img src="@Url.Content(Model.Path)" alt="Portada" style="width:250px; padding: 1em 0;" />
        }
        else if (Model.Path == null)
        {
            <b style="padding: 1em 0; " >Este Juego no tiene Portada</b>
        }
    </div>
    <br />
</div>
<p class="col-lg-offset-1">
    <a class="btn btn-primary" href="@Url.Action("Edit","Productos", new { id = Model.Id }, null )"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>  Editar</a>
    <a class="btn btn-warning" href="@Url.Action("Index","Productos", null, null )"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>  Volver</a>
</p>
