                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Comprar", "Index", "Producto")</li>
                        </ul>
                        </li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>

    <div class="">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
